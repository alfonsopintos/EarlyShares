<h1>Sign Up</h1>

<%= form_for @user do |f| %>
<p>
	<%= f.label :'User Name' %>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :'E-Mail' %>
	<%= f.email_field :email %>
</p>

<p>
	<%= f.label :'Phone Number' %>
	<%= f.telephone_field :phone_number %>
</p>

<p>
	<%= f.label :Password %>
	<%= f.password_field :password %>
</p>

 <p> 
	 <%= f.label :password_confirmation %>
	 <%= f.password_field :password_confirmation %>
 </p> 
 
 <%= f.submit %>
 	<% end %>